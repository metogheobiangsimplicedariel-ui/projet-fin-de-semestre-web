<?php
class PermissionModel {
    private $db;
    
    public function __construct() {
        require_once __DIR__ . '/../config/database.php';
        $this->db = Database::getConnection();
    }
    
    public function verifierPermissionProfesseur($professeurId, $matiereId, $colonneId) {
        // Vérifier que le professeur est affecté à cette matière
        $sql = "SELECT COUNT(*) as count
                FROM affectations a
                WHERE a.professeur_id = ?
                AND a.matiere_id = ?
                AND EXISTS (
                    SELECT 1 FROM periodes p 
                    WHERE p.id = a.periode_id 
                    AND p.statut = 'ouverte'
                )";
        
        try {
            $stmt = $this->db->prepare($sql);
            $stmt->execute([$professeurId, $matiereId]);
            $result = $stmt->fetch(PDO::FETCH_ASSOC);
            
            if ($result['count'] == 0) {
                return false;
            }
        } catch (PDOException $e) {
            error_log("Erreur vérification permission: " . $e->getMessage());
            return false;
        }
        
        // Vérifier que la colonne appartient à cette matière
        $sql = "SELECT COUNT(*) as count
                FROM configuration_colonnes
                WHERE id = ? AND matiere_id = ? AND actif = 1";
        
        try {
            $stmt = $this->db->prepare($sql);
            $stmt->execute([$colonneId, $matiereId]);
            $result = $stmt->fetch(PDO::FETCH_ASSOC);
            
            return $result['count'] > 0;
        } catch (PDOException $e) {
            error_log("Erreur vérification colonne: " . $e->getMessage());
            return false;
        }
    }
}
?>